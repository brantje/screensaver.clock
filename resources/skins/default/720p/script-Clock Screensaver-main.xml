<window>
    <controls>
        <control type="image">
            <description>Black Background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>black.png</texture>
        </control>
   
		<control type="group" id="17">
		  <description>My first group control</description>
		  <posx>325</posx>
		  <posy>60</posy>
		  <width>1280</width>
		  <height>300</height>
		  <visible>true</visible>
		  <onup>2</onup>
		  <ondown>3</ondown>
		  <onleft>1</onleft>
		  <onright>1</onright>
		  <align>center</align>
			<control type="image" id="1">
			  <description>Hour image</description>
			  <posx>90</posx>
			  <posy>60</posy>
			  <width>200</width>
			  <height>200</height>
			  <visible>true</visible>
			  <colordiffuse>FFFFFFFF</colordiffuse>
			  <fadetime>200</fadetime>
			  <texture>clock/$INFO[System.Time(hh)].png</texture>
			  <bordersize>5</bordersize>
			  <aspectratio>keep</aspectratio>
			</control>		
			<control type="image" id="2">
			  <description>Serporator</description>
			  <posx>210</posx>
			  <posy>60</posy>
			  <width>200</width>
			  <height>200</height>
			  <visible>true</visible>
			  <colordiffuse>FFFFFFFF</colordiffuse>
			  <fadetime>200</fadetime>
			  <texture>clock/column.png</texture>
			  <bordersize>5</bordersize>
			  <aspectratio>keep</aspectratio>
			</control>			
			<control type="image" id="3">
			  <description>Minute image</description>
			  <posx>320</posx>
			  <posy>60</posy>
			  <width>200</width>
			  <height>200</height>
			  <visible>true</visible>
			  <colordiffuse>FFFFFFFF</colordiffuse>
			  <fadetime>200</fadetime>
			  <texture>clock/$INFO[System.Time(mm)].png</texture>
			  <bordersize>5</bordersize>
			  <aspectratio>keep</aspectratio>
			</control>
			<control type="label">
				<description>Date</description>
				<posx>210</posx>
				<posy>250</posy>
				<width>500</width>
				<height>400</height>
				<textcolor>FFFFFFFF</textcolor>
				<label>$INFO[System.Date]</label>
				<font>font14</font>
			</control>
		</control>
    </controls>
</window>